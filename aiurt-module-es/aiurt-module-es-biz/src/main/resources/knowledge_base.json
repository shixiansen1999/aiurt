{
  "settings": {
    "index": {
      "analysis": {
        "analyzer": {
          "index_analyzer": {
            "tokenizer": "ik_max_word",
            "filter": [
              "lowercase"
            ]
          },
          "search_analyzer": {
            "tokenizer": "ik_smart",
            "filter": [
              "lowercase",
              "synonym_filter"
            ]
          }
        },
        "filter": {
          "synonym_filter": {
            "type": "synonym_graph",
            "synonyms_path": "analysis/synonyms.txt",
            "updateable": true
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "faultPhenomenonCode": {
        "type": "keyword"
      },
      "faultPhenomenon": {
        "type": "text",
        "analyzer": "index_analyzer",
        "fields": {
          "suggest": {
            "type": "completion",
            "analyzer": "ik_max_word"
          },
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        },
        "search_analyzer": "search_analyzer"
      },
      "knowledgeBaseTypeCode": {
        "type": "keyword"
      },
      "knowledgeBaseTypeName": {
        "type": "text",
        "analyzer": "index_analyzer",
        "fields": {
          "suggest": {
            "type": "completion",
            "analyzer": "ik_max_word"
          },
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        },
        "search_analyzer": "search_analyzer"
      },
      "majorCode": {
        "type": "keyword"
      },
      "majorName": {
        "type": "text"
      },
      "systemCode": {
        "type": "keyword"
      },
      "systemName": {
        "type": "text"
      },
      "materialCode": {
        "type": "keyword"
      },
      "materialName": {
        "type": "text"
      },
      "deviceTypeCode": {
        "type": "keyword"
      },
      "deviceTypeName": {
        "type": "text"
      },
      "faultLevelCode": {
        "type": "keyword"
      },
      "faultLevelName": {
        "type": "text"
      },
      "status": {
        "type": "integer"
      },
      "scanNum": {
        "type": "integer"
      },
      "method": {
        "type": "text",
        "analyzer": "ik_max_word",
        "fields": {
          "suggest": {
            "type": "completion",
            "analyzer": "ik_max_word"
          }
        },
        "search_analyzer": "ik_smart"
      },
      "use": {
        "type": "integer"
      },
      "createTime": {
        "type": "date",
        "index": false
      },
      "updateTime": {
        "type": "date",
        "index": false
      },
      "lineCode": {
        "type": "keyword"
      },
      "reasonSolutions": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "knowledgeBaseId": {
            "type": "keyword"
          },
          "faultCause": {
            "type": "text",
            "analyzer": "index_analyzer",
            "fields": {
              "suggest": {
                "type": "completion",
                "analyzer": "ik_max_word"
              }
            },
            "search_analyzer": "search_analyzer"
          },
          "solution": {
            "type": "text",
            "analyzer": "ik_max_word",
            "fields": {
              "suggest": {
                "type": "completion",
                "analyzer": "ik_max_word"
              }
            },
            "search_analyzer": "ik_smart"
          },
          "videoUrl": {
            "type": "keyword"
          },
          "happenRate": {
            "type": "text"
          },
          "spareParts": {
            "type": "nested",
            "properties": {
              "id": {
                "type": "keyword"
              },
              "causeSolutionId": {
                "type": "keyword"
              },
              "sparePartCode": {
                "type": "keyword"
              },
              "sparePartName": {
                "type": "text"
              },
              "specification": {
                "type": "text"
              },
              "number": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}
