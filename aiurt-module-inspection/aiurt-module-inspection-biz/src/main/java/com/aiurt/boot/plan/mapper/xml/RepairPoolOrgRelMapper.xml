<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiurt.boot.plan.mapper.RepairPoolOrgRelMapper">
    <select id="selectOrgByCode" resultType="com.aiurt.boot.index.dto.MapDTO">
        select
        rpor.repair_pool_code as  `value`,
        GROUP_CONCAT(rpor.org_code) as `text`
        from
        repair_pool_org_rel rpor
        <where>
            rpor.del_flag = 0
            <if test="planCodes!=null and planCodes.size()>0">
                and rpor.repair_pool_code in
                <foreach collection="planCodes" item="item" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
        group by rpor.repair_pool_code
    </select>
</mapper>