<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiurt.boot.task.mapper.PatrolTaskOrganizationMapper">

    <select id="selectOrgByTaskCode" resultType="com.aiurt.boot.task.dto.PatrolTaskOrganizationDTO">
        SELECT
        sd.depart_name,
        pto.*
        FROM
        patrol_task_organization pto
        JOIN sys_depart sd ON pto.org_code = sd.org_code
        WHERE
        pto.del_flag = 0
        <if test="taskCode != null and taskCode != ''">
            AND pto.task_code =#{taskCode}
        </if>
    </select>
</mapper>
