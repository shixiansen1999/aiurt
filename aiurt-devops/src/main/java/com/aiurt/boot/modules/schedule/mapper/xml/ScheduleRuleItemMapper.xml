<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiurt.boot.modules.schedule.mapper.ScheduleRuleItemMapper">

    <select id="getDetailRuleItems" resultType="com.aiurt.boot.modules.schedule.entity.ScheduleRuleItem">
        select sri.*,
               si.name  as itemName,
               si.color as color
        from schedule_rule_item sri
                 left join schedule_item si on sri.item_id = si.id
        where sri.rule_id = ${ruleId}
    </select>
</mapper>
